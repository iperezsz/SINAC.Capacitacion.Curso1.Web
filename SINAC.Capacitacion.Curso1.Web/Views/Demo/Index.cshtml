@{
}

<div id="grid-agentes">
</div>

@section Scripts {
    <script>
        $(function(){
            var dataSource = new DevExpress.data.DataSource({
                store: {
                    type: 'odata',
                    version: 4,
                    url: 'https://localhost:7251/odata/Agentes',
                    key: 'AgentCode'
                }
            });

            $('#grid-agentes').dxDataGrid({
                filterRow: {
                    visible: true
                },
                editing: {
                    allowAdding: true,
                    allowUpdating: true,
                    allowDeleting: true
                },
                dataSource: dataSource,
                columns: [
                    {
                        dataField: 'AgentCode',
                        caption: 'Código'
                    },
                    {
                        dataField: 'AgentName',
                        caption: 'Nombre'
                    }, {
                        dataField: 'WorkingArea',
                        caption: 'Área'
                    },
                ]
            });
        })
    </script>
}
